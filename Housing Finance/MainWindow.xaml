            <Image Grid.Row="2"  Grid.Column="2" Name="ercode" Margin="350,30,70,60" Source="pack://application:,,,/Common;component/IMG/二维码.png"/>

            <Grid   Grid.Row="1" Grid.Column="1" >
                <Image Source="pack://application:,,,/Common;component/IMG/ho.png" Margin="10"/>
