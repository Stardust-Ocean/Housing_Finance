            </Grid>
        </Grid>


        <Grid Name="TwoPage" Visibility="Hidden">

            <Image  Name="cmap" Visibility="Visible" Source="pack://application:,,,/Common;component/IMG/China.png" MouseDown="Image_MouseDown"/>

            <Image Margin="1700,780,50,50" Width="150" Height="150"   Source="pack://application:,,,/Common;component/IMG/二维码.png"/>

            <Image MouseDown="Backbtn_MouseDown" Name="Backbtn"  Width="100" Height="80"  Source="pack://application:,,,/Common;component/IMG/首页按钮.png" Margin="0,800,1700,0"/>
            <Image Margin="1700,780,50,50" Width="150" Height="150"   Source="pack://application:,,,/Common;component/IMG/二维码.png"/>


            <Image Name="WuMap" Visibility="Hidden" Source="pack://application:,,,/Common;component/IMG/WuHan.png" Margin="150"/>
            <Button Visibility="Hidden" Name="b1" Margin="1218,537,527,329" Click="WuHna_Click">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">

                        <StackPanel>
                            <TextBlock Name="fiz" Text ="武汉市	"  HorizontalAlignment="Center"  Foreground="White" FontSize="30" Margin="15"/>
                            <Image Name="img"  Source="pack://application:,,,/Common;component/IMG/地图图标.png" Margin="0,-65,0,0"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="img" Property="Source" Value="pack://application:,,,/Common;component/IMG/地图图标.png"/>
                                <Setter TargetName="fiz" Property="Text" Value="武汉市	"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="img" Property="Source" Value="pack://application:,,,/Common;component/IMG/地图图标点击.png"/>
                                <Setter TargetName="fiz" Property="Text" Value="武汉市	"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

        </Grid>

        <Grid Name="ThreePage" Visibility="Hidden" >
            <Image MouseDown="Backbtn_MouseDown"   Width="100" Height="80"  Source="pack://application:,,,/Common;component/IMG/首页按钮.png" Margin="0,800,1700,0"/>
            <Image Margin="1700,780,50,50" Width="150" Height="150"   Source="pack://application:,,,/Common;component/IMG/二维码.png"/>
            <Grid Margin="700,0,0,0" Height="920">
                <Image Source="pack://application:,,,/Common;component/IMG/WH/WH.png" MouseDown="Image_MouseDown_1"/>
            </Grid>
            <StackPanel Margin="200,50,1000,50">
                <ScrollViewer  Grid.Row="1" Grid.Column="1"  VerticalScrollBarVisibility="Visible" >

                    <ItemsControl Grid.Row="1" Grid.Column="1"   Width="Auto" Height="Auto"  x:Name="itemsControl">
                        <ItemsControl.Background>
                            <ImageBrush/>
                        </ItemsControl.Background>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel  />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <WrapPanel>
                                    <!--小区布局-->
                                    <Button Click="WuHan_Clity"  Width="260" Height="150" Margin="20,45,30,0" Tag="{Binding Prj_ECD_Inf}"  Content="{Binding Comm_Nm}" ContentStringFormat="{Binding Floor_Num}">
                                        <Button.Template>
                                            <ControlTemplate TargetType="{x:Type Button}">

                                                <StackPanel>
                                                    <TextBlock Name="fiz" Text ="{Binding Comm_Nm}"  HorizontalAlignment="Center"  Foreground="White" FontSize="25" Margin="15"/>
                                                    <Image Name="img"  Source="pack://application:,,,/Common;component/IMG/地图图标.png" Margin="0,-65,0,0"/>
                                                </StackPanel>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter TargetName="img" Property="Source" Value="pack://application:,,,/Common;component/IMG/地图图标.png"/>
                                                        <Setter TargetName="fiz" Property="Text" Value="{Binding Comm_Nm}"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="img" Property="Source" Value="pack://application:,,,/Common;component/IMG/地图图标点击.png"/>
                                                        <Setter TargetName="fiz" Property="Text" Value="{Binding Comm_Nm}"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </WrapPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </ScrollViewer>
            </StackPanel>

        </Grid>

    </Grid>
</Window>
